---
interface Props {
  totalApps?: number;
  newAppsCount?: number;
}

const { totalApps = 100, newAppsCount = 5 } = Astro.props;
---

<section class="py-16">
  <div class="max-w-4xl mx-auto px-4 sm:px-6">
    <div class="relative rounded-3xl overflow-hidden">
      <!-- Gradient background with modern blur effect -->
      <div class="absolute inset-0 bg-gradient-to-br from-gray-50/30 via-white/40 to-gray-50/30 
        dark:from-gray-900/30 dark:via-gray-800/40 dark:to-gray-900/30 backdrop-blur-xl"></div>
      
      <!-- Decorative elements -->
      <div class="absolute inset-0 bg-[radial-gradient(circle_at_top_right,rgba(120,119,198,0.1),transparent_40%)]"></div>
      <div class="absolute inset-0 bg-[radial-gradient(circle_at_bottom_left,rgba(74,222,128,0.1),transparent_40%)]"></div>

      <div class="relative p-8 sm:p-10">
        <!-- Header with Stats -->
        <div class="flex flex-col sm:flex-row justify-between items-start sm:items-center gap-8 mb-10">
          <div class="space-y-2">
            <h2 class="text-3xl font-bold leading-tight bg-clip-text text-transparent 
              bg-gradient-to-r from-gray-900 via-gray-800 to-gray-900
              dark:from-white dark:via-gray-200 dark:to-white">
              Bookmark This Page
            </h2>
            <p class="text-gray-600 dark:text-gray-400 text-sm">
              Save for instant access to discovering amazing Mac apps
            </p>
          </div>
          
          <div class="flex gap-8">
            <!-- Stats with modern styling -->
            <div class="relative group">
              <div class="absolute -inset-1 rounded-lg bg-gradient-to-r from-primary/20 to-primary/10 
                dark:from-primary/30 dark:to-primary/20 blur opacity-0 group-hover:opacity-100 transition-opacity"></div>
              <div class="relative text-center">
                <span class="block text-4xl font-bold bg-clip-text text-transparent 
                  bg-gradient-to-b from-gray-900 to-gray-700 dark:from-white dark:to-gray-300">
                  {totalApps}
                </span>
                <span class="text-xs font-medium tracking-wider text-gray-600 dark:text-gray-400">
                  TOTAL APPS
                </span>
              </div>
            </div>
            
            <div class="relative group">
              <div class="absolute -inset-1 rounded-lg bg-gradient-to-r from-emerald-500/20 to-emerald-400/10 
                dark:from-emerald-400/30 dark:to-emerald-300/20 blur opacity-0 group-hover:opacity-100 transition-opacity"></div>
              <div class="relative text-center">
                <span class="block text-4xl font-bold bg-clip-text text-transparent 
                  bg-gradient-to-b from-emerald-600 to-emerald-500 dark:from-emerald-400 dark:to-emerald-300">
                  {newAppsCount}
                </span>
                <span class="text-xs font-medium tracking-wider text-gray-600 dark:text-gray-400">
                  THIS WEEK
                </span>
              </div>
            </div>
          </div>
        </div>

        <!-- Features Grid with modern cards -->
        <div class="grid sm:grid-cols-2 gap-4 mb-8">
          {[
            {
              icon: 'sparkles',
              title: 'Regular Updates',
              desc: 'New apps added regularly'
            },
            {
              icon: 'star',
              title: 'Carefully Curated',
              desc: 'Native macOS apps'
            }
          ].map(feature => (
            <div class="group relative">
              <div class="absolute -inset-0.5 bg-gradient-to-r from-primary/50 to-emerald-500/50 
                rounded-xl blur opacity-0 group-hover:opacity-20 transition duration-500"></div>
              <div class="relative flex items-start gap-4 p-5 rounded-xl
                bg-white/40 dark:bg-gray-800/40 backdrop-blur-sm
                border border-gray-200/50 dark:border-gray-700/50
                hover:border-primary/30 dark:hover:border-primary/30
                transition duration-500">
                <div class="w-10 h-10 rounded-xl bg-gradient-to-br from-primary/10 to-emerald-500/10 
                  dark:from-primary/20 dark:to-emerald-500/20
                  flex items-center justify-center shrink-0 group-hover:scale-110 transition duration-500">
                  {feature.icon === 'sparkles' ? (
                    <svg class="w-5 h-5 text-primary dark:text-primary-light" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M5 3v4M3 5h4M6 17v4m-2-2h4m5-16l2.286 6.857L21 12l-5.714 2.143L13 21l-2.286-6.857L5 12l5.714-2.143L13 3z" />
                    </svg>
                  ) : (
                    <svg class="w-5 h-5 text-emerald-500 dark:text-emerald-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M11.049 2.927c.3-.921 1.603-.921 1.902 0l1.519 4.674a1 1 0 00.95.69h4.915c.969 0 1.371 1.24.588 1.81l-3.976 2.888a1 1 0 00-.363 1.118l1.518 4.674c.3.922-.755 1.688-1.538 1.118l-3.976-2.888a1 1 0 00-1.176 0l-3.976 2.888c-.783.57-1.838-.197-1.538-1.118l1.518-4.674a1 1 0 00-.363-1.118l-3.976-2.888c-.784-.57-.38-1.81.588-1.81h4.914a1 1 0 00.951-.69l1.519-4.674z" />
                    </svg>
                  )}
                </div>
                <div>
                  <h4 class="font-semibold text-gray-900 dark:text-white group-hover:text-primary 
                    dark:group-hover:text-primary-light transition duration-300">
                    {feature.title}
                  </h4>
                  <p class="text-sm text-gray-600 dark:text-gray-400 mt-1">
                    {feature.desc}
                  </p>
                </div>
              </div>
            </div>
          ))}
        </div>

        <!-- Updated Bookmark Bar -->
        <div class="relative group">
          <div class="absolute -inset-0.5 bg-gradient-to-r from-primary/30 to-emerald-500/30 
            rounded-xl blur opacity-0 group-hover:opacity-20 transition duration-500"></div>
          <div class="relative flex flex-col sm:flex-row items-center justify-center gap-4 p-4 rounded-xl
            bg-white/40 dark:bg-gray-800/40 backdrop-blur-sm
            border border-gray-200/50 dark:border-gray-700/50">
            <span class="text-sm font-medium text-gray-900 dark:text-white">
              Press
            </span>
            <div class="flex items-center gap-3">
              <kbd class="px-2.5 py-1.5 rounded-lg
                bg-white/70 dark:bg-gray-900/70
                border border-gray-200/50 dark:border-gray-700/50
                text-gray-600 dark:text-gray-300
                text-sm font-medium shadow-sm">âŒ˜</kbd>
              <span class="text-gray-400">+</span>
              <kbd class="px-2.5 py-1.5 rounded-lg
                bg-white/70 dark:bg-gray-900/70
                border border-gray-200/50 dark:border-gray-700/50
                text-gray-600 dark:text-gray-300
                text-sm font-medium shadow-sm">D</kbd>
            </div>
            <span class="text-sm font-medium text-gray-900 dark:text-white">
              to bookmark this collection
            </span>
          </div>
        </div>
      </div>
    </div>
  </div>
</section> 